          type: "bar",
          data: {
            labels: [" utilisÃ©es", " totale"],
            datasets: [
              {
                label: "Adresses",
                data: [used, total],
                backgroundColor: ["#2575fc", "#4facfe"],
                borderWidth: 1
              }
            ]
          },
          options: {
            indexAxis: "y",
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                beginAtZero: true,
                max: total,
                ticks: {
                  stepSize: Math.max(1, Math.ceil(total / 7))
                }
              },
              y: { grid: { display: false } }
            },
            plugins: {
              legend: { display: false },
              title: {
                display: true,
                text:
                  "Utilisation des adresses (sur " +
                  total +
                  ") - " +
                  pctUsed +
                  "% utilisÃ©s",
                font: { size: 24, weight: "bold" },
                color: "#2575fc"
              },
              tooltip: {
                callbacks: {
                  label: ctx =>
                    ctx.parsed.x +
                    " adresses (" +
                    ((ctx.parsed.x / total) * 100).toFixed(
                      2
                    ) +
                    "%)"
                }
              }
            }
          }
        });
      }
    } catch (e) {
      console.warn("adressChart err", e);
    }

    // addresses stats & extra table
    await (async function showAdressesStatsRunner() {
      const jsonAdrs = await loadAdressesJSON();

      // âœ… Ù†Ø³ØªØ®Ø¯Ù… agg.adressesUnique
      const computed = new Set(agg.adressesUnique);
      const computedArr = Array.from(computed);
      const missingInDB = jsonAdrs.filter(a => !computed.has(a));
      const extraInDB = computedArr;

      setText("dbAdressesCount", computedArr.length);
      setText("missingCount", missingInDB.length);
      applyDomQueue();

      q(".adressCount")?.addEventListener("click", () =>
        openAdressModal(missingInDB, extraInDB)
      );

      // âš ï¸ Ù†Ù…Ø±Ø± Ø§Ù„Ù…ØµÙÙˆÙØ© `produits` Ø§Ù„ØªÙŠ ØªÙ… ØªØ¹Ø±ÙŠÙÙ‡Ø§ Ø£Ø¹Ù„Ø§Ù‡ (agg.produitsInexistants)
      const extra = getExtraAdresses(missingInDB, extraInDB);


    })();

    // âŒ ØªÙ… Ø­Ø°Ù Ø¯Ø§Ù„Ø© getExtraAdresses Ø§Ù„Ù…ÙƒØ±Ø±Ø© Ù‡Ù†Ø§ Ù„Ø£Ù†Ù‡Ø§ Ù…ÙˆØ¬ÙˆØ¯Ø© Ø£Ø¹Ù„Ø§Ù‡.
  } catch (err) {
    console.error("Erreur dashboard:", err);
    const container =
      document.querySelector(".container-fluid") || document.body;
    const el = document.createElement("div");
    el.className = "alert alert-danger mt-3";
    el.textContent =
      "Erreur lors du chargement du dashboard. VÃ©rifiez la console.";
    container.prepend(el);
  } finally {
    setLoading(false);
  }
}

